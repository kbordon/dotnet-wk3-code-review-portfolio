@using Portfolio.ViewModels
@model LoginViewModel

<h2>Log In</h2>
@using (Html.BeginForm())
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)
    <br>
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)
    <br>
    <input type="submit" value="Log In"/>
}

